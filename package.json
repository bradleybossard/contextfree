{
  "name": "cfdg",
  "description": "Render CFDG grammars",
  "main": "index.js",
  "scripts": {
    "test": "mocha index.test.js -w",
    "test:single" : "istanbul cover -x *.test.js _mocha -- -R spec index.test.js",
    "check-coverage" : "istanbul check-coverage --statements 100 --branches 100 --functions 100  --lines 100",
    "commit": "git-cz",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bradleybossard/contextfree.git"
  },
  "keywords": [
    "cfdg",
    "context",
    "free"
  ],
  "author": "Bradley Bossard <bradleybossard@gmail.com> (http://bradleybossard.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bradleybossard/contextfree/issues"
  },
  "homepage": "https://github.com/bradleybossard/contextfree#readme",
  "devDependencies": {
    "chai": "3.4.1",
    "commitizen": "^2.4.6",
    "cz-conventional-changelog": "^1.1.5",
    "ghooks": "^1.0.1",
    "istanbul": "^0.4.1",
    "mocha": "2.3.4",
    "semantic-release": "^4.3.5"
  },
  "czConfig": {
    "path": "node_modules/cz-conventional-changelog"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run test:single && npm run check-coverage"
    }
  }
}
